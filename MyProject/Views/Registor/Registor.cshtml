@model MyProject.Models.Profile


@using (Html.BeginForm())
{
    <body style="background-color:pink">

        @Html.AntiForgeryToken()
        <link href="~/Content/Registor.css" rel="stylesheet" type="text/css" />


        <div class="broader">
            <div class="container" style="height:690px">


                <br /><br />

                <center>
                    <div class="group">
                        <input type="email" name="email" title="Only enter letters" />
                        <label style="padding-left:15px">อีเมลล์</label><br />
                        <p style="color:red ; font-weight:bold">@ViewBag.Message</p>
                    </div>
                </center>

                <center>
                    <div class="group">
                        <input id="password" name="password" type="password" minlength="6" pattern="[a-zA-Z0-9]+" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 6 characters' : ''); if(this.checkValidity()) form.password_two.pattern = this.value;" required />
                        <label style="padding-left:15px">รหัสผ่าน</label>
                    </div>
                </center>
                <center>
                    <div class="group">
                        <input id="password_two" name="password_two" type="password" minlength="6" pattern="[a-zA-Z0-9]+" onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same Password as above' : '');" required />
                        <label style="padding-left:15px">ยืนยันรหัสผ่าน</label>
                    </div>
                </center>
                <center>
                    <div class="group">
                        <input type="text" name="firstname" required />
                        <label style="padding-left:15px">ชื่อ</label>
                    </div>
                </center>
                <center>
                    <div class="group">
                        <input type="text" name="lastname" required />
                        <label style="padding-left:15px">นามสกุล</label>
                    </div>
                </center>

                <center>
                    <div class="group">
                        <div style="padding-top:20px">
                            <input type="date" name="birthday" required />
                            <label style="padding-left:15px"> วันเกิด</label>
                        </div>
                    </div>
                </center>


                <div class="group">
                    <label style="padding-left:15px">เพศ</label>
                    <div style="padding-top:30px;padding-left:15px">
                        <select name="sex" required>
                                    <option value="">กรุณาระบุเพศ</option>
                                    <option value="ชาย">ชาย</option>
                                    <option value="หญืง">หญิง</option>
                                </select>
                            </div>              
                        </div>
                    </div>


                    <center>
                        <div class="group" >
                            <input type="text" name="Contact" pattern="\d+" maxlength="10" required title="กรุณากรอกตัวเลขเท่านั้น" />
                            <label style="padding-left:30px">เบอร์ติดต่อ</label>
                        </div>
                    </center>


                    <div class="group">
                        <input type="text" name="Status" value="User" hidden required />
                    </div>
                    <div class="group">
                        <input class="Login_ok" type="submit" value="OK" />
                        <input class="Login_ok" type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Index")';" />
                    </div>

                </div>

            
    




    </body>

}
